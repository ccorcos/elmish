@import 'nib'

.split-view
  display: flex
  flex-direction: row
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0

  .sidebar
    flex: 0 0 300px
    border-right: 1px solid black
    overflow-y: scroll
    padding: 10px 5px
  
  .content
    flex: 1
    overflow-y: scroll
    padding: 10px 5px